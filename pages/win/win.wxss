/**index.wxss**/
.userinfo {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  text-align: left;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin: 20rpx;
}

.combat-info {
  /* margin: 0 20px; */
  align-items: left;
  text-align: left;
}

.des {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  font-size: 14px;
  color: #e35e00;
}

.record {
  margin: 20rpx;
}

.des-special{
  margin-top: 10rpx;
  font-size: 14px;
}

.list {
  line-height: 36px;
  margin: 20px;
  border-bottom: 1rpx solid rgba(210, 85, 1, 0.1);
}

.title{
  color: #e35e00;
  margin-bottom: 20px;
}
.praise{
  width: 30rpx;
  height: 30rpx;

}

.content-bottom{
  position: relative;
  margin-left: 20px;
  line-height: 14px; 
}
.content{
  color: #e35e00;
}


.report{
  font-size: 12px;
  color: #666666;
}
.name{
  margin-right: 10rpx;
  color: #e35e00;
}
.praise-container{
  display: inline-block;
  right: 20px;
  position: absolute;
}

.praise{
  width: 15px;
  height: 14px;
  vertical-align: middle;
}
.praise-number{
  font-size: 12px;
  line-height: 14px;
  text-align: center;
  left: 10px;
}